# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Environment mode (development, production, test)
NODE_ENV=development

# Server configuration
PORT=3000
HOST=localhost
API_VERSION=v1

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MongoDB connection string
# Format: mongodb://[username:password@]host[:port]/database[?options]
# Example: mongodb://localhost:27017/ecommerce
MONGODB_URI=mongodb://localhost:27017/ecommerce

# MongoDB test database (used for running tests)
MONGODB_TEST_URI=mongodb://localhost:27017/ecommerce_test

# Database name
DB_NAME=ecommerce

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Access Token Secret (MUST be changed in production - use long random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your_jwt_access_secret_here_must_be_long_and_complex_change_in_production

# JWT Access Token Expiry (15 minutes recommended for security)
JWT_ACCESS_EXPIRY=15m

# JWT Refresh Token Secret (MUST be different from access secret)
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_must_be_long_and_complex_change_in_production

# JWT Refresh Token Expiry (7 days recommended)
JWT_REFRESH_EXPIRY=7d

# Bcrypt salt rounds (10-12 recommended, higher = more secure but slower)
BCRYPT_ROUNDS=10

# Session secret for express-session (if using sessions)
SESSION_SECRET=your_session_secret_key_change_in_production

# Session expiry in milliseconds (24 hours = 86400000)
SESSION_EXPIRE=86400000

# ============================================================================
# PAYMENT GATEWAY INTEGRATION (STRIPE)
# ============================================================================

# Stripe Secret Key (starts with sk_test_ for test mode, sk_live_ for production)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Publishable Key (starts with pk_test_ for test mode, pk_live_ for production)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret (for verifying webhook signatures)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Payment currency (ISO 4217 currency code)
PAYMENT_CURRENCY=USD

# ============================================================================
# EMAIL SERVICE CONFIGURATION
# ============================================================================

# Email service provider (smtp, sendgrid, mailgun)
EMAIL_SERVICE=smtp

# SMTP Configuration (if using SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# Email credentials
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-app-password

# Sender email address and name
EMAIL_FROM=noreply@ecommerce.com
EMAIL_FROM_NAME=E-Commerce Store

# SendGrid API Key (if using SendGrid instead of SMTP)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Mailgun Configuration (if using Mailgun instead of SMTP)
# MAILGUN_API_KEY=your_mailgun_api_key_here
# MAILGUN_DOMAIN=your_mailgun_domain_here

# ============================================================================
# FRONTEND & CORS CONFIGURATION
# ============================================================================

# Frontend application URL
CLIENT_URL=http://localhost:3000

# CORS allowed origins (comma-separated list)
# Add all domains that should be allowed to access the API
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================

# Maximum file size in bytes (5MB = 5242880 bytes)
MAX_FILE_SIZE=5242880

# Upload directory path (relative to project root)
UPLOAD_PATH=./uploads

# Allowed file MIME types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Maximum number of files per upload
MAX_FILES_PER_UPLOAD=5

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================

# Rate limit window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Rate limit for authentication endpoints (stricter)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info

# Log file directory path
LOG_FILE_PATH=./logs

# Maximum log file size in bytes (10MB = 10485760)
LOG_MAX_SIZE=10485760

# Maximum number of log files to keep
LOG_MAX_FILES=5

# ============================================================================
# CACHE CONFIGURATION (REDIS - OPTIONAL)
# ============================================================================

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis password (leave empty if no password)
REDIS_PASSWORD=

# Redis database number (0-15)
REDIS_DB=0

# Cache TTL in seconds (1 hour = 3600)
CACHE_TTL=3600

# Enable Redis for rate limiting (true/false)
REDIS_RATE_LIMIT_ENABLED=false

# ============================================================================
# AWS S3 CONFIGURATION (OPTIONAL - FOR CLOUD STORAGE)
# ============================================================================

# AWS Access Key ID
# AWS_ACCESS_KEY_ID=your_aws_access_key_id

# AWS Secret Access Key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# AWS S3 Bucket name
# AWS_S3_BUCKET=your-bucket-name

# AWS Region
# AWS_REGION=us-east-1

# S3 public URL (if using CloudFront or custom domain)
# AWS_S3_PUBLIC_URL=https://your-cdn-domain.com

# ============================================================================
# ANALYTICS & MONITORING (OPTIONAL)
# ============================================================================

# Sentry DSN for error tracking
# Get from: https://sentry.io/settings/projects/
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry environment
# SENTRY_ENVIRONMENT=development

# Google Analytics Tracking ID
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ============================================================================
# THIRD-PARTY INTEGRATIONS (OPTIONAL)
# ============================================================================

# PayPal Configuration (alternative payment gateway)
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret
# PAYPAL_MODE=sandbox

# Twilio Configuration (for SMS notifications)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# SECURITY HEADERS & MIDDLEWARE
# ============================================================================

# Enable Helmet security headers (true/false)
HELMET_ENABLED=true

# Enable HPP (HTTP Parameter Pollution) protection (true/false)
HPP_ENABLED=true

# Enable MongoDB sanitization (true/false)
MONGO_SANITIZE_ENABLED=true

# Enable compression middleware (true/false)
COMPRESSION_ENABLED=true

# ============================================================================
